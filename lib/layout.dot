		<link href='http://fonts.googleapis.com/css?family=Droid+Serif:400,400italic|Open+Sans:400italic,400,700' rel='stylesheet' type='text/css'>
	<!--</noscript>-->
	<style>
		{{=it.criticalCss}}
	</style>
</head>
<body>

	<div id="tollanApp" class="container">
		{{=it.element}}
	</div>

	<script>
		/* Defer scripts and fonts */
		/* Code from Pony Foo */
		/* http://ponyfoo.com/articles/critical-path-performance-optimization */
		(function(window, document) {
			var src = 'main.js';
			var font = 'http://fonts.googleapis.com/css?family=Droid+Serif:400,400italic|Open+Sans:400italic,400,700';
			var styles = 'main.css';

			function inject() {
				var head = document.getElementsByTagName('head')[0];

				/* Inject JS */
				var scriptElement = document.createElement('script');
				scriptElement.src = src;
				document.body.appendChild(scriptElement);

				/* Inject fonts */
				/*var fontElement = document.createElement('link');
				fontElement.rel = 'stylesheet';
				fontElement.href = font;
				head.appendChild(fontElement);*/

				/* Inject main styles */
				var stylesElement = document.createElement('link');
				stylesElement.rel = 'stylesheet';
				stylesElement.href = styles;
				head.appendChild(stylesElement);
			}

			/* Add event listener */
			if (window.addEventListener) {
				window.addEventListener('load', inject, false);
			} else if (window.attachEvent) {
				window.attachEvent('onload', inject);
			} else {
				window.onload = inject;
			}
		})(window, document);
	</script>

</body>
</html>
